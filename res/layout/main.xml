<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/checkout"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<Button android:layout_width="fill_parent" android:text="@string/checkin"
		android:layout_margin="15dip"
		android:id="@+id/buttonCheckin" android:layout_height="80dip"></Button>
	<DigitalClock android:layout_width="fill_parent"
		android:id="@+id/digitalClock1" android:text="DigitalClock"
		android:layout_height="50dip" android:textStyle="bold"
		android:textSize="30dip" android:layout_marginLeft="15dip" android:layout_marginRight="15dip" android:gravity="center"></DigitalClock>
	<Button android:layout_width="fill_parent" android:text="@string/checkout"
		android:layout_margin="15dip"
		android:id="@+id/buttonCheckout" android:layout_height="80dip"></Button>
</LinearLayout>
